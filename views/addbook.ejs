<!doctype html>
<html>
  <head>
    <title>Add book to <%=shopData.shopName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1><%=shopData.shopName%>: Add book</h1>
    <!-- Form to add a new book record to the database.
         Submits a POST request to the /books/bookadded route -->
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <div class="error-box">
        <ul>
          <% errors.forEach(err => { %>
            <li><%= err.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
    <form method="POST" action="bookadded">
        <p>Book name: <input type="text" name="name" value="<%= formData ? formData.name : '' %>"/></p>
        <p>Price: <input type="number" step="0.01" name="price" value="<%= formData ? formData.price : '' %>"/></p>
        <input type="submit" value="Add Book" />
      </form>
  </body>
</html>